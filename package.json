{
  "name": "toslimarif-api",
  "version": "1.0.0",
  "description": "REST API for my portfolio 'toslimarif.com' https://api.toslimarif.com/",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node ./dist/index.js",
    "dev": "ts-node-dev --respawn --transpileOnly ./src/index.ts",
    "tslint": "tslint --project tsconfig.json",
    "prettier:base": "prettier --parser typescript --single-quote",
    "prettier:check": "npm run prettier:base -- --list-different \"src/**/*.{ts,tsx}\"",
    "prettier:write": "npm run prettier:base -- --write \"src/**/*.{ts,tsx}\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier:write"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toslimarif/toslimarif-api.git"
  },
  "keywords": [
    "portfolio",
    "portfolio-api",
    "rest"
  ],
  "author": "Toslim Arif",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/toslimarif/toslimarif-api/issues"
  },
  "homepage": "https://github.com/toslimarif/toslimarif-api#readme",
  "devDependencies": {
    "@types/express": "^4.17.6",
    "husky": "^4.2.5",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "tslint": "^6.1.2",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.9.3"
  },
  "dependencies": {
    "express": "^4.17.3"
  }
}
